{
  "app-id": "dev.diegovsky.Riff",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "riff",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--talk-name=org.freedesktop.secrets",
    "--device=dri"
  ],
  "separate-locales": false,
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "env": {
      "CARGO_HOME": "/run/build/riff/cargo",
      "RUST_BACKTRACE": "full",
      "RUST_LOG": "riff=debug"
    },
    "strip": false,
    "no-debuginfo": false
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "riff",
      "buildsystem": "meson",
      "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
          "CARGO_NET_OFFLINE": "true"
        }
      },
      "config-opts": [
        "-Doffline=true",
        "-Dbuildtype=debug"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        },
        "cargo-sources.json"
      ]
    }
  ]
}
